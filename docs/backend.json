
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "A digital product sold in the store.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number", "description": "Current selling price" },
        "originalPrice": { "type": "number", "description": "Price before discount (strikethrough)" },
        "category": { "type": "string" },
        "rating": { "type": "number" },
        "reviews": { "type": "number" },
        "sold": { "type": "number" },
        "stock": { "type": "number" },
        "flashSaleStock": { "type": "number", "description": "Number of stocks allocated for flash sale" },
        "isBestSeller": { "type": "boolean" },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "image": { "type": "string" },
        "deliveryContent": { "type": "string" },
        "flashSaleEnd": { "type": "string", "format": "date-time", "description": "End time for promotional price" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "price", "category", "description", "image", "stock"]
    },
    "Voucher": {
      "title": "Voucher",
      "description": "Discount coupon for checkout.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string", "description": "Coupon code (e.g. MONO50)" },
        "type": { "type": "string", "enum": ["percentage", "fixed"], "description": "Type of discount" },
        "value": { "type": "number", "description": "Discount value (e.g. 10 for 10% or 5000 for IDR 5000)" },
        "minPurchase": { "type": "number", "description": "Minimum cart total to apply" },
        "isActive": { "type": "boolean" },
        "expiryDate": { "type": "string", "format": "date-time" }
      },
      "required": ["code", "type", "value", "isActive"]
    },
    "Banner": {
      "title": "Banner",
      "description": "A promotional banner image for the home page carousel.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "image": { "type": "string" },
        "title": { "type": "string" },
        "link": { "type": "string" },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["image", "order"]
    },
    "Order": {
      "title": "Order",
      "description": "A purchase record of digital products.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "whatsapp": { "type": "string" },
        "order_id": { "type": "string" },
        "items": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "deliveryContent": { "type": "string" }
            }
          }
        },
        "totalAmount": { "type": "number" },
        "discountAmount": { "type": "number" },
        "voucherCode": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["customerName", "customerEmail", "items", "totalAmount"]
    },
    "Review": {
      "title": "Review",
      "description": "User review for a specific product.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userName": { "type": "string" },
        "rating": { "type": "number" },
        "comment": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userName", "rating", "comment"]
    },
    "Settings": {
      "title": "Settings",
      "description": "General application settings.",
      "type": "object",
      "properties": {
        "shopName": { "type": "string" },
        "whatsapp": { "type": "string", "description": "WhatsApp number (format: 628xxx)" },
        "supportEmail": { "type": "string", "format": "email" }
      },
      "required": ["shopName"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": "Product",
      "description": "Collection of all digital products."
    },
    "/products/{productId}/reviews/{reviewId}": {
      "schema": "Review",
      "description": "Subcollection of reviews."
    },
    "/banners/{bannerId}": {
      "schema": "Banner",
      "description": "Home page promotional banners."
    },
    "/vouchers/{voucherId}": {
      "schema": "Voucher",
      "description": "Store discount vouchers."
    },
    "/orders/{orderId}": {
      "schema": "Order",
      "description": "Successful transactions."
    },
    "/settings/{settingId}": {
      "schema": "Settings",
      "description": "Store-wide configuration settings."
    }
  }
}
