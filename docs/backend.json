
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "A digital product sold in the store.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier (Firestore Auto-ID)" },
        "name": { "type": "string", "description": "Name of the product" },
        "price": { "type": "number", "description": "Price in IDR" },
        "category": { "type": "string", "description": "Category of the product" },
        "rating": { "type": "number", "description": "Average rating" },
        "reviews": { "type": "number", "description": "Number of reviews" },
        "sold": { "type": "number", "description": "Total units sold" },
        "isBestSeller": { "type": "boolean", "description": "Whether the product is a bestseller" },
        "description": { "type": "string", "description": "Detailed description" },
        "features": { "type": "array", "items": { "type": "string" }, "description": "List of product features" },
        "image": { "type": "string", "description": "URL of the product image" },
        "deliveryContent": { "type": "string", "description": "The link or file URL delivered to user after purchase" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "price", "category", "description", "image"]
    },
    "Order": {
      "title": "Order",
      "description": "A purchase record of digital products.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "whatsapp": { "type": "string" },
        "githubUser": { "type": "string" },
        "items": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "deliveryContent": { "type": "string" }
            }
          }
        },
        "totalAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["completed", "pending"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["customerName", "customerEmail", "items", "totalAmount"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": "Product",
      "description": "Collection of all digital products available in the store."
    },
    "/orders/{orderId}": {
      "schema": "Order",
      "description": "Collection of all successful transactions."
    }
  }
}
