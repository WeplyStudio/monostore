
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "A digital product sold in the store.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number" },
        "originalPrice": { "type": "number" },
        "category": { "type": "string" },
        "rating": { "type": "number" },
        "reviews": { "type": "number" },
        "sold": { "type": "number" },
        "stock": { "type": "number" },
        "flashSaleStock": { "type": "number" },
        "isBestSeller": { "type": "boolean" },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "image": { "type": "string" },
        "deliveryContent": { "type": "string" },
        "flashSaleEnd": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "price", "category", "description", "image", "stock"]
    },
    "Bundle": {
      "title": "Bundle",
      "description": "A package of multiple products with a special discount.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "productIds": { "type": "array", "items": { "type": "string" } },
        "discountPercentage": { "type": "number" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "productIds", "discountPercentage", "isActive"]
    },
    "Voucher": {
      "title": "Voucher",
      "description": "Discount coupon for checkout.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "type": { "type": "string", "enum": ["percentage", "fixed"] },
        "value": { "type": "number" },
        "minPurchase": { "type": "number" },
        "isActive": { "type": "boolean" },
        "expiryDate": { "type": "string", "format": "date-time" }
      },
      "required": ["code", "type", "value", "isActive"]
    },
    "Banner": {
      "title": "Banner",
      "description": "A promotional banner image for the home page carousel.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "image": { "type": "string" },
        "title": { "type": "string" },
        "link": { "type": "string" },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["image", "order"]
    },
    "Order": {
      "title": "Order",
      "description": "A purchase record of digital products.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "whatsapp": { "type": "string" },
        "order_id": { "type": "string" },
        "items": { "type": "array", "items": { "type": "object" } },
        "totalAmount": { "type": "number" },
        "discountAmount": { "type": "number" },
        "voucherCode": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["customerName", "customerEmail", "items", "totalAmount"]
    },
    "AdminSubscription": {
      "title": "AdminSubscription",
      "description": "Web Push subscription data for admin notifications.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "subscription": { "type": "object" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Settings": {
      "title": "Settings",
      "description": "General application settings.",
      "type": "object",
      "properties": {
        "shopName": { "type": "string" },
        "whatsapp": { "type": "string" },
        "supportEmail": { "type": "string" }
      },
      "required": ["shopName"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/products/{productId}": { "schema": "Product", "description": "Collection of products." },
    "/banners/{bannerId}": { "schema": "Banner", "description": "Promotional banners." },
    "/vouchers/{voucherId}": { "schema": "Voucher", "description": "Discount vouchers." },
    "/orders/{orderId}": { "schema": "Order", "description": "Customer orders." },
    "/bundles/{bundleId}": { "schema": "Bundle", "description": "Product bundles." },
    "/settings/{settingId}": { "schema": "Settings", "description": "Store settings." },
    "/admin_subscriptions/{subId}": { "schema": "AdminSubscription", "description": "Push notification subscriptions." }
  }
}
