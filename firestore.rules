
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /reviews/{reviewId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    match /payment_keys/{keyId} {
      // Allow searching by the key itself and listing for verification
      allow get, list, create: if true;
      allow update: if true;
    }

    match /wallet_transactions/{txId} {
      // Allow user to see their own transactions by paymentKeyId filtering
      allow read, create: if true; 
    }

    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /vouchers/{voucherId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /bundles/{bundleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow create: if true;
      allow read: if true; // For success page
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
