
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      allow read: if true;
      allow update: if true; // Diperlukan untuk update rating/review count secara otomatis
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if true; // Siapa pun bisa memberikan review setelah beli
        allow update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      }
    }
    
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
  }
}
