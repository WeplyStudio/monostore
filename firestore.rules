
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi pembantu untuk mengecek admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }

    // Koleksi Produk: Semua bisa baca, hanya admin bisa tulis
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /reviews/{reviewId} {
        allow read, create: if true;
        allow update, delete: if isAdmin();
      }
    }

    // Koleksi Payment Keys: Akses publik untuk sistem wallet anonim
    match /payment_keys/{keyId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }

    // Koleksi Transaksi Wallet: Akses publik agar user bisa melihat riwayat mereka sendiri via Key
    // Membuka izin list secara eksplisit untuk menghindari error pada kueri filtered
    match /wallet_transactions/{txId} {
      allow read, list, create: if true;
      allow update, delete: if isAdmin();
    }

    // Koleksi Banner: Promo publik
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Koleksi Voucher: Promo publik
    match /vouchers/{voucherId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Koleksi Bundling: Promo publik
    match /bundles/{bundleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Koleksi Pesanan: User butuh read untuk halaman sukses & riwayat anonim
    match /orders/{orderId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }

    // Koleksi Pengaturan: Publik baca, admin tulis
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Pemicu Redeploy: 2024-05-20_v3_fix_wallet_list
  }
}
