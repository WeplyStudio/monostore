
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
    
    match /orders/{orderId} {
      // Siapa pun dapat membuat pesanan baru (checkout)
      allow create: if true;
      
      // Hanya admin yang dapat melihat dan mengelola semua pesanan
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
  }
}
