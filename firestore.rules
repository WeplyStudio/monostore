
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for Products
    match /products/{productId} {
      allow read: if true;
      allow update: if true; // Allowed for stock decrement and rating updates
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      
      // Rules for Reviews subcollection
      match /products/{productId}/reviews/{reviewId} {
        allow read, create: if true;
        allow update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      }
    }

    // Rules for Banners - PUBLIC READ ACCESS
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
    
    // Rules for Orders
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
  }
}
