rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      // Siapa pun dapat melihat produk
      allow read: if true;
      
      // Hanya admin yang terverifikasi emailnya yang dapat mengelola produk
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
  }
}