
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /products/{productId} {
      allow read: if true;
      allow update: if true; 
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      
      match /reviews/{reviewId} {
        allow read, create: if true;
        allow update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
      }
    }

    match /banners/{bannerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }

    match /vouchers/{voucherId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }

    match /bundles/{bundleId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
    
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'matchboxdevelopment@gmail.com';
    }
  }
}
